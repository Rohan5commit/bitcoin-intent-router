name: solver-cron

on:
  schedule:
    - cron: "*/15 * * * *"
  workflow_dispatch:

jobs:
  run-solver-once:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: actions/setup-node@v4
        with:
          node-version: 20
          cache: npm
      - run: npm ci
      - run: npm run --workspace indexer solver:once
        env:
          MOCK_MODE: "false"
          STACKS_NETWORK: ${{ secrets.STACKS_NETWORK }}
          STACKS_API_URL: ${{ secrets.STACKS_API_URL }}
          CONTRACT_ID: ${{ secrets.CONTRACT_ID }}
          READ_ONLY_CALLER: ${{ secrets.READ_ONLY_CALLER }}
          SOLVER_PRIVATE_KEY: ${{ secrets.SOLVER_PRIVATE_KEY }}
